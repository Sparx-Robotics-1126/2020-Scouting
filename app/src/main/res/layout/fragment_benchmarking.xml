<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background">
        <!--No header-->
        <LinearLayout
            style="@style/jcas_backgroundComplement">
            <LinearLayout
                style="@style/jcas_horizontalBlock">
                <TextView
                    style="@style/jcas_textView"
                    android:text="Team Number"/>
                <EditText
                    style="@style/jcas_editText" />
            </LinearLayout>
        </LinearLayout>
        <!--General Kenobi-->
        <LinearLayout
            style="@style/jcas_background">
            <!--Header-->

            <TextView
                style="@style/jcas_headerTextView"
                android:text="General" />

            <Spinner
                android:id="@+id/driveType"
                style="@style/jcas_spinner"/>

            <Spinner
                android:id="@+id/wheelType"
                style="@style/jcas_spinner" />

            <LinearLayout
                style="@style/jcas_horizontalBlock"
                >
                <TextView
                    style="@style/jcas_textView"
                    android:text="Number Wheels:"/>
                <EditText
                    style="@style/jcas_editText" />

            </LinearLayout>

            <LinearLayout
                style="@style/jcas_horizontalBlock"
                >
                <TextView
                    style="@style/jcas_textView"
                    android:text="Max Speed(ft/s):"/>
                <EditText
                    style="@style/jcas_editText" />

            </LinearLayout>

            <LinearLayout
                style="@style/jcas_horizontalBlock"
                >
                <TextView
                    style="@style/jcas_textView"
                    android:text="Normal Height(ft):"/>
                <EditText
                    style="@style/jcas_editText" />

            </LinearLayout>

            <LinearLayout
                style="@style/jcas_horizontalBlock"
                >
                <TextView
                    style="@style/jcas_textView"
                    android:text="Weight(lbs):"/>
                <EditText
                    style="@style/jcas_editText" />

            </LinearLayout>

            <Spinner
                android:id="@+id/visionType"
                style="@style/jcas_spinner"/>

        </LinearLayout>
        <!--Auto-->
        <LinearLayout
            style="@style/jcas_backgroundComplement">
            <!--Header-->
            <TextView
                style="@style/jcas_headerTextView"
                android:text="Auto"/>

            <Spinner
                android:id="@+id/startPos"
                style="@style/jcas_spinner"/>

            <LinearLayout
                style="@style/jcas_horizontalBlock">
                <TextView
                    style="@style/jcas_textView"
                    android:text="Max Starting Power Cells"/>
                <EditText
                    style="@style/jcas_editText"/>
            </LinearLayout>

            <LinearLayout
                style="@style/jcas_horizontalBlock">
                <TextView
                    style="@style/jcas_textView"
                    android:text="Can Score Bottom Port"/>
                <CheckBox
                    style="@style/jcas_checkBox"/>
            </LinearLayout>

            <LinearLayout
                style="@style/jcas_horizontalBlock">
                <TextView
                    style="@style/jcas_textView"
                    android:text="Can Score Inner/Outer Port"/>
                <CheckBox
                    style="@style/jcas_checkBox"/>
            </LinearLayout>

            <LinearLayout
                style="@style/jcas_horizontalBlock">
                <TextView
                    style="@style/jcas_textView"
                    android:text="Can Acquire From Floor"/>
                <CheckBox
                    style="@style/jcas_checkBox"/>
            </LinearLayout>

        </LinearLayout>
        <!--Teleop-->
        <LinearLayout
            style="@style/jcas_background">
            <!--Header-->
            <TextView
                style="@style/jcas_headerTextView"
                android:text="Teleop"/>

            <LinearLayout
                style="@style/jcas_horizontalBlock">
                <TextView
                    style="@style/jcas_textView"
                    android:text="Can Score Bottom Port"/>
                <CheckBox
                    style="@style/jcas_checkBox"/>
            </LinearLayout>

            <LinearLayout
                style="@style/jcas_horizontalBlock">
                <TextView
                    style="@style/jcas_textView"
                    android:text="Can Score Inner/Outer Port"/>
                <CheckBox
                    style="@style/jcas_checkBox"/>
            </LinearLayout>

            <LinearLayout
                style="@style/jcas_horizontalBlock">
                <TextView
                    style="@style/jcas_textView"
                    android:text="Can Acquire From Floor"/>
                <CheckBox
                    style="@style/jcas_checkBox"/>
            </LinearLayout>

        </LinearLayout>
        <!--Avengers: End Game-->
        <LinearLayout
            style="@style/jcas_backgroundComplement">
            <!--Header-->
            <TextView
                style="@style/jcas_headerTextView"
                android:text="End Game"/>
            <LinearLayout
                style="@style/jcas_horizontalBlock">
                <TextView
                    style="@style/jcas_textView"
                    android:text="Can Climb"/>
                <CheckBox
                    style="@style/jcas_checkBox"/>
            </LinearLayout>

            <LinearLayout
                style="@style/jcas_horizontalBlock">
                <TextView
                    style="@style/jcas_textView"
                    android:text="Can Actively Level"/>
                <CheckBox
                    style="@style/jcas_checkBox"/>
            </LinearLayout>

        </LinearLayout>
        <!--Comments-->
        <LinearLayout
            style="@style/jcas_background">
            <!--Header-->
            <TextView
                style="@style/jcas_headerTextView"
                android:text="Comments"/>
            <EditText
                style="@style/jcas_editText"
                android:layout_width="match_parent"
                android:inputType="text"
                />

        </LinearLayout>

    </LinearLayout>
</ScrollView>