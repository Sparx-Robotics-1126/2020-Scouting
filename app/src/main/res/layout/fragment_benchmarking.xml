<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background">
        <!--No title-->
        <LinearLayout
            style="@style/jcas_backgroundComplement">
            <LinearLayout
                style="@style/jcas_horizontalBlock">
                <TextView
                    style="@style/jcas_textView"
                    android:text="Team Number"/>
                <EditText
                    android:id="@+id/teamNumber"
                    style="@style/jcas_editText" />
            </LinearLayout>
            <Button
                android:id="@+id/exitButton"
                style="@style/jcas_bigOlButton"
                android:text="@string/benchmark_exit"/>
        </LinearLayout>
        <!--General Kenobi-->
        <LinearLayout
            style="@style/jcas_background">
            <!--Header-->
            <TextView
                style="@style/jcas_headerTextView"
                android:text="General" />

            <Spinner
                android:id="@+id/driveType"
                style="@style/jcas_spinner"/>

            <Spinner
                android:id="@+id/wheelType"
                style="@style/jcas_spinner" />

            <LinearLayout
                style="@style/jcas_horizontalBlock"
                >
                <TextView
                    style="@style/jcas_textView"
                    android:text="Number Wheels:"/>
                <EditText
                    android:id="@+id/numWheels"
                    style="@style/jcas_editText" />

            </LinearLayout>

            <LinearLayout
                style="@style/jcas_horizontalBlock"
                >
                <TextView
                    style="@style/jcas_textView"
                    android:text="Max Speed(ft/s):"/>
                <EditText
                    android:id="@+id/maxSpeed"
                    style="@style/jcas_editText" />

            </LinearLayout>

            <LinearLayout
                style="@style/jcas_horizontalBlock"
                >
                <TextView
                    style="@style/jcas_textView"
                    android:text="Normal Height(ft):"/>
                <EditText
                    android:id="@+id/normalHeight"
                    style="@style/jcas_editText" />

            </LinearLayout>

            <LinearLayout
                style="@style/jcas_horizontalBlock"
                >
                <TextView
                    style="@style/jcas_textView"
                    android:text="Weight(lbs):"/>
                <EditText
                    android:id="@+id/weight"
                    style="@style/jcas_editText" />

            </LinearLayout>

            <Spinner
                android:id="@+id/visionType"
                style="@style/jcas_spinner"/>

        </LinearLayout>
        <!--Auto-->
        <LinearLayout
            style="@style/jcas_backgroundComplement">
            <!--Header-->
            <TextView
                style="@style/jcas_headerTextView"
                android:text="Auto"/>

            <Spinner
                android:id="@+id/startPos"
                style="@style/jcas_spinner"/>

            <LinearLayout
                style="@style/jcas_horizontalBlock">
                <TextView
                    style="@style/jcas_textView"
                    android:text="Starting Power Cells"/>
                <EditText
                    android:id="@+id/startingCells"
                    style="@style/jcas_editText"/>
            </LinearLayout>

            <LinearLayout
                style="@style/jcas_horizontalBlock">
                <TextView
                    style="@style/jcas_textView"
                    android:text="Can Score Bottom Port"/>
                <CheckBox
                    android:id="@+id/autoScoreBottom"
                    style="@style/jcas_checkBox"/>
            </LinearLayout>

            <LinearLayout
                style="@style/jcas_horizontalBlock">
                <TextView
                    style="@style/jcas_textView"
                    android:text="Can Score Inner/Outer Port"/>
                <CheckBox
                    android:id="@+id/autoScoreTop"
                    style="@style/jcas_checkBox"/>
            </LinearLayout>

            <LinearLayout
                style="@style/jcas_horizontalBlock">
                <TextView
                    style="@style/jcas_textView"
                    android:text="Can Acquire From Floor"/>
                <CheckBox
                    android:id="@+id/autoAcquireFloor"
                    style="@style/jcas_checkBox"/>
            </LinearLayout>

        </LinearLayout>
        <!--Teleop-->
        <LinearLayout
            style="@style/jcas_background">
            <!--Header-->
            <TextView
                style="@style/jcas_headerTextView"
                android:text="Teleop"/>

            <LinearLayout
                style="@style/jcas_horizontalBlock">
                <TextView
                    style="@style/jcas_textView"
                    android:text="Can Score Bottom Port"/>
                <CheckBox
                    android:id="@+id/teleScoreBottom"
                    style="@style/jcas_checkBox"/>
            </LinearLayout>

            <LinearLayout
                style="@style/jcas_horizontalBlock">
                <TextView
                    style="@style/jcas_textView"
                    android:text="Can Score Inner/Outer Port"/>
                <CheckBox
                    android:id="@+id/teleScoreTop"
                    style="@style/jcas_checkBox"/>
            </LinearLayout>

            <LinearLayout
                style="@style/jcas_horizontalBlock">
                <TextView
                    style="@style/jcas_textView"
                    android:text="Can Acquire From Floor"/>
                <CheckBox
                    android:id="@+id/teleAcquireFloor"
                    style="@style/jcas_checkBox"/>
            </LinearLayout>

        </LinearLayout>
        <!--Avengers: End Game-->
        <LinearLayout
            style="@style/jcas_backgroundComplement">
            <!--Header-->
            <TextView
                style="@style/jcas_headerTextView"
                android:text="End Game"/>
            <LinearLayout
                style="@style/jcas_horizontalBlock">
                <TextView
                    style="@style/jcas_textView"
                    android:text="Can Climb"/>
                <CheckBox
                    android:id="@+id/canClimb"
                    style="@style/jcas_checkBox"/>
            </LinearLayout>

            <LinearLayout
                style="@style/jcas_horizontalBlock">
                <TextView
                    style="@style/jcas_textView"
                    android:text="Can Actively Level"/>
                <CheckBox
                    android:id="@+id/canLevel"
                    style="@style/jcas_checkBox"/>
            </LinearLayout>

        </LinearLayout>
        <!--Comments-->
        <LinearLayout
            style="@style/jcas_background">
            <!--Header-->
            <TextView
                style="@style/jcas_headerTextView"
                android:text="Comments"/>
            <EditText
                android:id="@+id/comments"
                style="@style/jcas_editText"
                android:layout_width="match_parent"
                android:inputType="text"
                />
            <Button
                android:id="@+id/saveButton"
                style="@style/jcas_bigOlButton"
                android:text="Save (Submit?)"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>