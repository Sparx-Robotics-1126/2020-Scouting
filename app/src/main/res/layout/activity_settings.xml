<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@id/email"
            style="@style/item_text_view"
            android:text="Email:" />

        <TextView
            android:id="@+id/emailInput"
            style="@style/item_text_view"
            android:text="No email" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/team"
            style="@style/item_text_view"
            android:text="Team #:" />

        <TextView
            android:id="@+id/teamInput"
            style="@style/item_text_view"
            android:text="0" />
    </LinearLayout>

    <Spinner
        android:id="@+id/eventSpinner"
        style="@style/J_spinner" />

    <LinearLayout
        android:id="@+id/scoutingTabletLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/alliance"
                style="@style/regularButton"
                android:text="@string/red_alliance"/>
        </LinearLayout>

        <RadioGroup
            android:id="@+id/teams"
            style="@style/radioGroup">

            <RadioButton
                android:id="@+id/team1"
                style="@style/radioButton"
                android:text="Team 1" />

            <RadioButton
                android:id="@+id/team2"
                style="@style/radioButton"
                android:text="Team 2" />

            <RadioButton
                android:id="@+id/team3"
                style="@style/radioButton"
                android:text="Team 3" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/reconfigure"
            style="@style/regularButton"
            android:text="Reconfigure (will erase all data)"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/configure"
            style="@style/regularButton"
            android:text="Save Configuration (will erase all data)"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/exit"
            style="@style/regularButton"
            android:text="Exit (without saving)"/>
    </LinearLayout>

</LinearLayout>