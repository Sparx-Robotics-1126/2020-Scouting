<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/backgroundScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/assignmentTextView"
            style="@style/title_text_view"
            android:text="Assignment:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scouterNameTextView"
                style="@style/item_text_view"
                android:text="Scouter:" />

            <TextView
                android:id="@+id/scouterNameInput"
                style="@style/item_text_view"
                android:text="No name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/matchNumTextView"
                style="@style/item_text_view"
                android:text="Match Number:" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/plusMatch"
                    style="@style/t019_plusMinusButton"
                    android:text="+" />

                <TextView
                    android:id="@+id/matchNumInput"
                    style="@style/item_text_view"
                    android:text="0" />

                <Button
                    android:id="@+id/minusMatch"
                    style="@style/t019_plusMinusButton"
                    android:text="-" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/logOutButton"
                style="@style/regularButton"
                android:text="Log Out"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/teamNumTextView"
                    style="@style/item_text_view"
                    android:text="Team: " />

                <TextView
                    android:id="@+id/teamNumInput"
                    style="@style/item_text_view"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/allianceTextView"
                    style="@style/item_text_view"
                    android:text="Alliance Color: " />

                <TextView
                    android:id="@+id/allianceInput"
                    style="@style/item_text_view"
                    android:layout_width="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/autonomousTextView"
            style="@style/title_text_view"
            android:text="Autonomous:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/startingPosTextView"
                style="@style/sub_title_text_view"
                android:text="Starting Position:" />

            <RadioGroup
                android:id="@+id/startingPositionRadioGroup"
                style="@style/radioGroup">

                <RadioButton
                    android:id="@+id/closestRadioButton"
                    style="@style/radioButton"
                    android:text="Closest to Power Port" />

                <RadioButton
                    android:id="@+id/middleRadioButton"
                    style="@style/radioButton"
                    android:text="Middle" />

                <RadioButton
                    android:id="@+id/farthestRadioButton"
                    style="@style/radioButton"
                    android:text="Farthest to Power Port" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/startBallsTextView"
                    style="@style/sub_title_text_view"
                    android:text="Power Cells in robot at start:" />

                <RadioGroup
                    android:id="@+id/startingBallsRadioGroup"
                    style="@style/radioGroup">

                    <RadioButton
                        android:id="@+id/noneRadioButton"
                        style="@style/radioButton"
                        android:text="None" />

                    <RadioButton
                        android:id="@+id/oneRadioButton"
                        style="@style/radioButton"
                        android:text="One" />

                    <RadioButton
                        android:id="@+id/twoRadioButton"
                        style="@style/radioButton"
                        android:text="Two" />

                    <RadioButton
                        android:id="@+id/threeRadioButton"
                        style="@style/radioButton"
                        android:text="Three" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ballsScoredAutoTextView"
                    style="@style/sub_title_text_view"
                    android:text="Power Cells Scored:" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bottomPortAutoTextView"
                        style="@style/item_text_view"
                        android:text="Bottom port" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/plusBallsBottomAuto"
                            style="@style/t019_plusMinusButton"
                            android:text="+" />

                        <TextView
                            android:id="@+id/ballsBottomAutoInput"
                            style="@style/item_text_view"
                            android:text="0" />

                        <Button
                            android:id="@+id/minusBallsBottomAuto"
                            style="@style/t019_plusMinusButton"
                            android:text="-" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/outerPortAutoTextView"
                        style="@style/item_text_view"
                        android:text="Outer port" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/plusBallsOuterAuto"
                            style="@style/t019_plusMinusButton"
                            android:text="+" />

                        <TextView
                            android:id="@+id/ballsOuterAutoInput"
                            style="@style/item_text_view"
                            android:text="0" />

                        <Button
                            android:id="@+id/minusBallsOuterAuto"
                            style="@style/t019_plusMinusButton"
                            android:text="-" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/innerPortAutoTextView"
                        style="@style/item_text_view"
                        android:text="Inner port"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/plusBallsInnerAuto"
                            style="@style/t019_plusMinusButton"
                            android:text="+" />

                        <TextView
                            android:id="@+id/ballsInnerAutoInput"
                            style="@style/item_text_view"
                            android:text="0"/>

                        <Button
                            android:id="@+id/minusBallsInnerAuto"
                            style="@style/t019_plusMinusButton"
                            android:layout_weight="0"
                            android:text="-" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ballsAcquiredAutoTextView"
                    style="@style/sub_title_text_view"
                    android:text="Power Cells Acquired:"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/floorAutoTextView"
                        style="@style/item_text_view"
                        android:text="Floor"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/plusBallsFloorAuto"
                            style="@style/t019_plusMinusButton"
                            android:text="+" />

                        <TextView
                            android:id="@+id/ballsFloorAutoInput"
                            style="@style/item_text_view"
                            android:text="0"/>

                        <Button
                            android:id="@+id/minusBallsFloorAuto"
                            style="@style/t019_plusMinusButton"
                            android:text="-" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/crossesLineTextView"
                    style="@style/sub_title_text_view"
                    android:text="Cross Initiation Line:"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/crossedLineTextView"
                        style="@style/item_text_view"
                        android:layout_weight="1"
                        android:text="Left Line at some point"/>

                    <CheckBox
                        android:id="@+id/crossedLineCheckBox"
                        style="@style/t019_checkBox"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/teleoperatedTextView"
            style="@style/title_text_view"
            android:text="Teleoperated:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ballsScoredTeleTextView"
                style="@style/sub_title_text_view"
                android:text="Power Cells Scored:"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bottomPortTeleTextView"
                    style="@style/item_text_view"
                    android:text="Bottom port"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/plusBallsBottomTele"
                        style="@style/t019_plusMinusButton"
                        android:text="+" />

                    <TextView
                        android:id="@+id/ballsBottomTeleInput"
                        style="@style/item_text_view"
                        android:text="0"/>

                    <Button
                        android:id="@+id/minusBallsBottomTele"
                        style="@style/t019_plusMinusButton"
                        android:text="-" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/outerPortTeleTextView"
                    style="@style/item_text_view"
                    android:text="Outer port"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/plusBallsOuterTele"
                        style="@style/t019_plusMinusButton"
                        android:text="+" />

                    <TextView
                        android:id="@+id/ballsOuterTeleInput"
                        style="@style/item_text_view"
                        android:text="0"/>

                    <Button
                        android:id="@+id/minusBallsOuterTele"
                        style="@style/t019_plusMinusButton"
                        android:text="-" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/innerPortTeleTextView"
                    style="@style/item_text_view"
                    android:text="Inner port"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/plusBallsInnerTele"
                        style="@style/t019_plusMinusButton"
                        android:text="+" />

                    <TextView
                        android:id="@+id/ballsInnerTeleInput"
                        style="@style/item_text_view"
                        android:text="0"/>

                    <Button
                        android:id="@+id/minusBallsInnerTele"
                        style="@style/t019_plusMinusButton"
                        android:text="-" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/ballsAcquiredTeleTextView"
                style="@style/sub_title_text_view"
                android:text="Power Cells Acquired:"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/floorTeleTextView"
                    style="@style/item_text_view"
                    android:text="Floor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/plusBallsFloorTele"
                        style="@style/t019_plusMinusButton"
                        android:text="+" />

                    <TextView
                        android:id="@+id/floorTeleInput"
                        style="@style/item_text_view"
                        android:text="0"/>

                    <Button
                        android:id="@+id/minusBallsFloorTele"
                        style="@style/t019_plusMinusButton"
                        android:text="-" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lowChuteTeleTextView"
                    style="@style/item_text_view"
                    android:text="Low Chute"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/plusBallsLowChuteTele"
                        style="@style/t019_plusMinusButton"
                        android:text="+" />

                    <TextView
                        android:id="@+id/ballsLowChuteTeleInput"
                        style="@style/item_text_view"
                        android:text="0"/>

                    <Button
                        android:id="@+id/minusBallsLowChuteTele"
                        style="@style/t019_plusMinusButton"
                        android:text="-" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/highChuteTeleTextView"
                    style="@style/item_text_view"
                    android:text="High Chute"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/plusBallsHighChuteTele"
                        style="@style/t019_plusMinusButton"
                        android:text="+" />

                    <TextView
                        android:id="@+id/ballsHighChuteTeleInput"
                        style="@style/item_text_view"
                        android:text="0"/>

                    <Button
                        android:id="@+id/minusBallsHighChuteTele"
                        style="@style/t019_plusMinusButton"
                        android:text="-" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/controlPanelInteractionTextView"
                style="@style/sub_title_text_view"
                android:text="Control Panel Interaction:"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/performedRotationControlTextView"
                    style="@style/item_text_view"
                    android:layout_weight="1"
                    android:text="Performed Rotation Control"/>

                <CheckBox
                    android:id="@+id/performedRotationControlCheckBox"
                    style="@style/t019_checkBox"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/performedPositionControlTextView"
                    style="@style/item_text_view"
                    android:layout_weight="1"
                    android:text="Performed Position Control"/>

                <CheckBox
                    android:id="@+id/performedPositionControlCheckBox"
                    style="@style/t019_checkBox"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/endGameTextView"
            style="@style/title_text_view"
            android:text="End Game:"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rendezuousTextView"
                style="@style/sub_title_text_view"
                android:text="Rendezvous:"/>

            <RadioGroup
                android:id="@+id/rendezuousRadioGroup"
                style="@style/radioGroup">

                <RadioButton
                    android:id="@+id/noparkRadioButton"
                    style="@style/radioButton"
                    android:text="No Parking"/>

                <RadioButton
                    android:id="@+id/parkedRadioButton"
                    style="@style/radioButton"
                    android:text="Parked"/>

                <RadioButton
                    android:id="@+id/hangedRadioButton"
                    style="@style/radioButton"
                    android:text="Hanged"/>
            </RadioGroup>

            <TextView
                android:id="@+id/levelingTextView"
                style="@style/sub_title_text_view"
                android:text="Leveling:"/>

            <RadioGroup
                android:id="@+id/activeLevelingRadioGroup"
                style="@style/radioGroup">

                <RadioButton
                    android:id="@+id/noLevelingRadioButton"
                    style="@style/radioButton"
                    android:text="No leveling"/>

                <RadioButton
                    android:id="@+id/triedToLevelRadioButton"
                    style="@style/radioButton"
                    android:text="Tried to level"/>

                <RadioButton
                    android:id="@+id/successfullyLeveledRadioButton"
                    style="@style/radioButton"
                    android:text="Successfully leveled"/>
            </RadioGroup>
        </LinearLayout>

        <TextView
            android:id="@+id/otherTextView"
            style="@style/title_text_view"
            android:text="Other:"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/excellecentDefenseTextView"
                    style="@style/item_text_view"
                    android:layout_weight="1"
                    android:text="Played Excellent Defense"/>

                <CheckBox
                    android:id="@+id/excellecentDefenseCheckBox"
                    style="@style/t019_checkBox"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/causedFouldTextView"
                    style="@style/item_text_view"

                    android:layout_weight="1"
                    android:text="Caused a foul"/>

                <CheckBox
                    android:id="@+id/causedFouldCheckBox"
                    style="@style/t019_checkBox" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/brokeDisabledTextView"
                    style="@style/item_text_view"
                    android:layout_weight="1"
                    android:text="Broke or got Disabled"/>

                <CheckBox
                    android:id="@+id/brokeDisabledCheckBox"
                    style="@style/t019_checkBox" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/saveButton"
                style="@style/regularButton"
                android:text="Save"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/exit"
                style="@style/regularButton"
                android:text="Exit (without saving)"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>